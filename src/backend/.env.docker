# Configuración para Docker Compose
# Copia este archivo a .env antes de ejecutar docker-compose

# Base de datos PostgreSQL
POSTGRES_DB=ocr_database
POSTGRES_USER=ocr_user
POSTGRES_PASSWORD=your_secure_password_here

# URL de conexión a la base de datos
DATABASE_URL=postgresql://ocr_user:your_secure_password_here@db:5432/ocr_database

# JWT Settings
SECRET_KEY_JWT=your_super_secret_jwt_key_here_make_it_long_and_random_for_production_123456789
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://redis:6379/0

# Storage Configuration
LOCAL_STORAGE_PATH=/app/uploaded_documents_local

# YOLO Models Path
YOLO_MODELS_PATH=/app/models/yolo_models

# Project Root
PROJECT_ROOT=/app
